{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@crypto-ledger/db": ["packages/db/src"],
      "@crypto-ledger/shared/*": ["packages/shared/src/*"],
      "@crypto-ledger/crypto/*": ["packages/crypto/src/*"],
      "@crypto-ledger/reports/*": ["packages/reports/src/*"],
      "@crypto-ledger/analytics/*": ["packages/analytics/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["apps/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.e2e-spec.ts", "**/*.test.ts"]
}
